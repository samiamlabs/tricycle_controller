<?xml version="1.0"?>

<robot name="tricycle_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="materials.xacro"/>
  <xacro:include filename="utils.urdf.xacro"/>

  <xacro:include filename="tricycle.gazebo.xacro"/>

  <xacro:include filename="support_wheel.urdf.xacro"/>
  <xacro:include filename="drive_wheel_assembly.urdf.xacro"/>

  <link name="base_link">
    <visual>
      <origin xyz="0.08 0 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.2 0.08"/>
      </geometry>
      <material name="light_blue"/>
    </visual>

    <collision>
      <origin xyz="0.08 0 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.2 0.08"/>
      </geometry>
      <material name="dark"/>
    </collision>

    <!-- Set hight weight and low interia for now -->
    <inertial>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <mass value="10"/>
      <box_inertia m="0.1" x="0.3" y="0.25" z="0.1"/>
    </inertial>
  </link>

  <!-- Base footprint -->
  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <!-- Macros -->
  <xacro:property name="support_wheel_separation" value="0.217"/>

  <support_wheel name="support_wheel_right" separation="${support_wheel_separation}" reflect="1.0" parent="base_link"/>
  <support_wheel name="support_wheel_left" separation="${support_wheel_separation}" reflect="-1.0" parent="base_link"/>

  <drive_wheel_assembly/>

  <!-- Gazebo extentions -->
  <base_gazebo/>

</robot>
